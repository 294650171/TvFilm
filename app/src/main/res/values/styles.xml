<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--控件样式部分，   尽量使用安卓原生的样式-->
    <style name="Widget" />
    <!-- 首页RadioButton样式 -->
    <style name="Widget.TabIndicator_three" parent="@style/Widget">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/white60</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/tab_title_background</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- CustomProgressDialog样式 -->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- progressDialog加载样式 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="Widget.TabIndicator" parent="@style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/radio_selectot</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:button">@null</item>
    </style>
    <!-- appname样式 -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <!-- category样式 -->
    <style name="TextAppearance.Button" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/lightcyan</item>
        <item name="android:height">@dimen/button_height</item>
    </style>

    <style name="cardviewlong">
        <item name="android:layout_width">@dimen/item_category_long_width</item>
        <item name="android:layout_height">@dimen/item_category_small_width</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="cardviewsmall">
        <item name="android:layout_width">@dimen/item_category_small_width</item>
        <item name="android:layout_height">@dimen/item_category_small_width</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="textview_category" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="categoryitem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black40</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="categoryitemsmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="focusitem">
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="SortFragStyle" parent="Widget">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="SortFragStyleSmall" parent="Widget">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="dialogText1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dialogText2" >
        <item name="android:textColor">@color/wheat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pay_btn">
       <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">@drawable/default_selector_blue</item>
    </style>

    <style name="live_text">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
