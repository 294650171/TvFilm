<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_film_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuojin.tvfilm.modules.details.FilmDetailActivity">
    <RelativeLayout
        android:descendantFocusability="afterDescendants"
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_gravity="top">
        <ImageButton
            android:id="@+id/iv_back"
            android:background="@drawable/iv_back_selector"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="电影详情"
            android:textSize="30sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_toRightOf="@id/iv_back"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_filmpic_detail"
        android:layout_below="@id/relative"
        android:layout_width="150dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/tv_filmname_detail"
        android:layout_below="@id/relative"

        android:layout_toRightOf="@id/iv_filmpic_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电影名"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_filmname_detail"
        android:layout_toRightOf="@id/iv_filmpic_detail"
        android:id="@+id/rb_score_detail"/>

    <TextView
        android:id="@+id/tv_brief_detail"
        android:layout_toRightOf="@id/iv_filmpic_detail"
        android:layout_below="@id/rb_score_detail"
        android:background="@color/aqua"
        android:layout_width="800dp"
        android:layout_height="200dp"/>

</RelativeLayout>
