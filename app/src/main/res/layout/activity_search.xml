<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_search_whole"
              android:background="@mipmap/bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
<include layout="@layout/topbar"/>
    <RelativeLayout
        android:id="@+id/left_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="30dp"
        android:paddingTop="50dp">

        <EditText
            android:id="@+id/edit_search"
            android:layout_width="600dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/search_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="编辑影片名"
            android:maxLength="10"
            android:nextFocusDown="@+id/rv_history"
            android:paddingLeft="32dp"
            android:paddingRight="20dp"
            android:textColor="@color/wheat"
            android:textColorHint="@color/wheat"
            android:textSize="22dp"
            />

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_search"
            android:text="历史播放"
            android:textColor="@color/white"
            android:textSize="26sp"/>
        <TextView
            android:id="@+id/tv_history_clear"
            android:layout_below="@id/edit_search"
            android:layout_toRightOf="@id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/default_selector_white"
            android:focusable="true"
            android:nextFocusUp="@id/edit_search"
            android:nextFocusLeft="@id/rv_history"
            android:nextFocusRight="@id/rv_history"
            android:nextFocusDown="@id/rv_history"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="清除历史"
            android:textColor="@color/blueviolet"
            android:textSize="22sp"/>
        <LinearLayout
            android:layout_below="@id/tv_history"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/iv_left_history"
                android:layout_width="30dp"
                android:layout_height="200dp"
                android:layout_alignBottom="@id/rv_history"
                android:src="@drawable/arrow_left"
                android:visibility="invisible"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_history"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_below="@id/tv_history"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/iv_left_history"
                android:descendantFocusability="afterDescendants"
                android:nextFocusUp="@id/edit_search"
                />

            <ImageView
                android:id="@+id/iv_right_history"
                android:layout_width="30dp"
                android:layout_height="200dp"
                android:layout_alignBottom="@id/rv_history"
                android:layout_toRightOf="@id/rv_history"
                android:src="@drawable/arrow_right"
                android:visibility="invisible"/>
        </LinearLayout>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_toRightOf="@+id/left_menu"
        android:layout_weight="1"
        android:descendantFocusability="afterDescendants">

        <TextView
            android:id="@+id/first_search_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp"
            android:nextFocusUp="@id/recyclerView"
            android:paddingLeft="30dp"
            android:paddingRight="40dp"
            android:text="热门搜索"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_search_text"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_left"
                android:visibility="invisible"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="30dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:descendantFocusability="afterDescendants"
                android:nextFocusUp="@id/tv_history_clear"/>

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_right"
                android:visibility="invisible"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
