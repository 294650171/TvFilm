<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="182dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_left"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/tab_indicator_search"
            style="@style/Widget.TabIndicator_three"
            android:drawableLeft="@drawable/dcms_search"
            android:text="搜索" />



        <!--<RadioButton-->
            <!--android:id="@+id/tab_indicator_screening"-->
            <!--style="@style/Widget.TabIndicator_three"-->
            <!--android:drawableLeft="@drawable/screening"-->
            <!--android:text="筛选" />-->

        <RadioButton
            android:id="@+id/tab_indicator_index"
            style="@style/Widget.TabIndicator"
            android:text="首页" />

        <RadioButton
            android:id="@+id/tab_indicator_action"
            style="@style/Widget.TabIndicator"
            android:text="动作" />

        <RadioButton
            android:id="@+id/tab_indicator_collection"
            style="@style/Widget.TabIndicator"
            android:text="收藏"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/tab_indicator_order2"
            style="@style/Widget.TabIndicator"
            android:text="订单"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/tab_indicator_fiction"
            style="@style/Widget.TabIndicator"
            android:text="科幻" />

        <RadioButton
            android:id="@+id/tab_indicator_animation"
            style="@style/Widget.TabIndicator"
            android:text="动画" />

        <RadioButton
            android:id="@+id/tab_indicator_suspense"
            style="@style/Widget.TabIndicator"
            android:text="悬疑" />

        <RadioButton
            android:id="@+id/tab_indicator_emotional"
            style="@style/Widget.TabIndicator"
            android:text="情感" />

        <RadioButton
            android:id="@+id/tab_indicator_comedy"
            style="@style/Widget.TabIndicator"
            android:text="喜剧" />

        <RadioButton
            android:id="@+id/tab_indicator_all"
            style="@style/Widget.TabIndicator"
            android:text="全部" />
    </LinearLayout>
</LinearLayout>